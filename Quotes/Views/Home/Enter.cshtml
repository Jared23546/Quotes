@{
    ViewData["Title"] = "Enter Quote";
}

@model Quotes.Models.Quote

<h1>Enter a Quote</h1>

<div>
    <form method="post">
        <label asp-for="TheQuote">Quote: </label>
        <input asp-for="TheQuote" required /><br />

        <label asp-for="Author">Author: </label>
        <input asp-for="Author" required /><br />

        <label asp-for="Date">Date: </label>
        <input asp-for="Date" type="date" /><br />

        <label asp-for="Subject">Subject: </label>
        <input asp-for="Subject" /><br />

        <label asp-for="Citation">Citation: </label>
        <input asp-for="Citation" /><br />



        <button type="submit" value="Submit">Submit</button>
        <div asp-validation-summary="All"></div>
    </form>
</div>