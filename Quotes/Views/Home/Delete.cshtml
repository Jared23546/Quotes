@{
    ViewData["Title"] = "Delete Quote";
}

@model Quote
<h2>Confirm Deletion</h2>
<h3>Are you sure that you want to delete the quote by @Model.Author?</h3>
<form method="post" asp-action="Delete">
    <button type="submit">Delete</button>
    <a asp-controller="Home" asp-action="Index" class="btn">Cancel</a>

    @*hidden asp-for*@
    <input type="hidden" asp-for="QuoteId" />
</form>